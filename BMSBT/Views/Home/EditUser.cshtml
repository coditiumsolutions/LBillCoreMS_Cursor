@model BMSBT.Models.User

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_LayoutSetup.cshtml";
    var selectedRoles = (string[])ViewBag.SelectedRoles;
}
<div class="card shadow-lg">
    <div class="card-header text-white" style="background-color:#101f63;">
        <h3 class="mb-0">Update User</h3>
    </div>
    <div class="card-body">
<form asp-action="EditUser" method="post">
    <div class="container">
        <input asp-for="Uid" type="hidden" />

        <!-- First Row -->
        <div class="row mb-3">
            <div class="col-md-3">
                <label asp-for="EmployeeId" class="form-label">Employee ID</label>
                <input asp-for="EmployeeId" class="form-control" />
                @Html.ValidationMessageFor(m => m.EmployeeId, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" />
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

                    <div class="col-md-3 mb-3">
                        <label asp-for="PasswordHash" class="form-label">Password</label>
                        <div class="input-group">
                            <input asp-for="PasswordHash" class="form-control" type="password" placeholder="Enter Password" />
                            <button class="btn btn-outline-secondary" type="button" id="showPasswordToggle">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="Role" class="form-label">Roles</label>
                        <select asp-for="Role" class="form-control select2-multiple" multiple="multiple" name="Role">
                            @foreach (var role in new List<string> { "Admin", "User", "Manager", "Analyst", "Viewer" })
                            {
                                <option value="@role" selected="@(selectedRoles != null && Array.Exists(selectedRoles, r => r == role) ? "selected" : null)">@role</option>
                            }
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>


                   
                        <div class="col-md-3" style="margin-top :29px">
                            <button type="submit" class="btn btn-primary">Update</button>
                        <a asp-action="Users" class="btn btn-secondary">Cancel</a>
                        </div>

                  
                    
        </div>


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
</form>
    </div>
</div>


                    @section Scripts {
    <!-- jQuery (required for Select2) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Select2 CSS and JS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    
    <script>
        $(document).ready(function() {
            // Initialize Select2 for multi-select
            $('.select2-multiple').select2({
                placeholder: 'Select roles',
                allowClear: true,
                closeOnSelect: false
            });

            // Password show/hide toggle
            $('#showPasswordToggle').on('click', function() {
                var passwordInput = $('input[name="PasswordHash"]');
                var type = passwordInput.attr('type') === 'password' ? 'text' : 'password';
                passwordInput.attr('type', type);
                $(this).find('i').toggleClass('fa-eye fa-eye-slash');
            });
        });
    </script>
    }
    