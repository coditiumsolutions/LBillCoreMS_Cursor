@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Billing Management System - Setup</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 5px;
        }

        .header {
            background-color: #142141;
            color: #fff;
            padding: 20px;
            text-align: center;
            border-radius: 5px;
        }

        .section-card {
            border: 1px solid #dee2e6;
            border-radius: 5px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .section-card:hover {
                box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
            }

        .section-title {
            color: #142141;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #142141;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0d1733;
            }

    </style>
</head>
<body>
    <div class="container">
        @*  <div class="header">
            <h3>Setup Module</h3>
        </div> *@

        <div class="row mt-5">
            <!-- Section 1: Company Information -->
            <div class="col-md-4 mb-4">
                <div class="card section-card p-3">
                    <h5 class="section-title">Customer's Detail</h5>
                    <p>Manage customer information, including personal details, contact information, and account status.</p>
                    <a href="Customers" class="btn btn-success">Click to Process</a>
                </div>
            </div>

            <!-- Section 2: Tax and Pricing Configuration -->
            <div class="col-md-4 mb-4">
                <div class="card section-card p-3">
                    <h5 class="section-title">E-Billing</h5>
                    <p>Generate and manage electricity bills based on consumption, tariff rates, and payment history.</p>
                    <a href="EBillU" class="btn btn-success">Click to Process</a>
                </div>
            </div>

            <!-- Section 3: User Management -->
            <div class="col-md-4 mb-4">
                <div class="card section-card p-3">
                    <h5 class="section-title">M-Billing</h5>
                    <p>Handle maintenance charges, service fees, and related billing transactions.</p>
                    <a href="MaintenanceBill" class="btn btn-success">Click to Process</a>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Section 4: Payment Methods -->
            <div class="col-md-4 mb-4">
                <div class="card section-card p-3">
                    <h5 class="section-title">Reports</h5>
                    <p>Generate detailed reports on billing, payments, outstanding dues, and overall system performance.</p>
                    <a href="Reports" class="btn btn-success">Click to Process</a>
                </div>
            </div>

            <!-- Section 5: Product/Service Categories -->
            <div class="col-md-4 mb-4">
                <div class="card section-card p-3">
                    <h5 class="section-title">Auditor's Section'</h5>
                    <p>Provide auditors with access to financial records, transaction logs, and system reports for verification and compliance.</p>
                    <a href="Audit" class="btn btn-success">Click to Process</a>
                </div>
            </div>

            <!-- Section 6: Invoice Templates -->
            <div class="col-md-4 mb-4">
                <div class="card section-card p-3">
                    <h5 class="section-title">Reading Details</h5>
                    <p>Record and track electricity consumption through periodic meter readings to ensure accurate billing.</p>
                    <a href="ReadingSheet/ReadingDetails" class="btn btn-success">Click to Process</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
