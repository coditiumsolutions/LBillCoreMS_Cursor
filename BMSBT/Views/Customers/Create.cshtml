@model BMSBT.Models.Customer

@{
    ViewData["Title"] = "Create";
}



<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .custom-input {
            width: 100%; /* Default width */
            height: 30px; /* Default height */
        }

            .custom-input.large {
                width: 300px; /* Custom width for specific inputs */
                height: 50px; /* Custom height for specific inputs */
            }

            .custom-input.small {
                width: 200px; /* Smaller width */
                height: 30px; /* Smaller height */
            }



        .title-column {
            width: 15%; /* Width for title columns */
        }

        .field-column {
            width: 30%; /* Width for input field columns */
        }
              


    </style>

    <script type="text/javascript">
                function showAlert(message, type, redirectUrl) {
                    var alertType = type === 'success' ? 'alert-success' : 'alert-danger';
                    var alertHtml = '<div class="alert ' + alertType + ' alert-dismissible fade show" role="alert">' +
                        message +
                        '<button type="button" class="close" data-dismiss="alert" aria-label="Close">' +
                        '<span aria-hidden="true">&times;</span>' +
                        '</button>' +
                        '</div>';
                    document.getElementById('alertContainer').innerHTML = alertHtml;

                    // Redirect after showing the alert
                    if (redirectUrl) {
                        setTimeout(function () {
                            window.location.href = redirectUrl;
                        }, 100);
                    }
                }

              
       </script>

</head>



<h4>Customer</h4>
<hr />
<div class="container">

    <div class="container mt-5">
    <ul class="nav nav-tabs" id="customerFormTabs" role="tablist">
     
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="customer-tab" 
            data-bs-toggle="tab" data-bs-target="#customer" 
            type="button" role="tab" aria-controls="customer" 
            aria-selected="true">Customer Details</button>
        </li>
       
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="billing-tab" 
            data-bs-toggle="tab" data-bs-target="#billing" 
            type="button" role="tab" aria-controls="billing" 
            aria-selected="false">Billing Details</button>
        </li>
      
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="history-tab" 
            data-bs-toggle="tab" data-bs-target="#history"
            type="button" role="tab" aria-controls="history" 
            aria-selected="false">History Info</button>
        </li>
       
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="other-tab" 
            data-bs-toggle="tab" data-bs-target="#other" 
            type="button" role="tab" aria-controls="other"
            aria-selected="false">Other Information</button>
        </li>
    </ul>



    <div class="tab-content mt-3" id="customerFormTabsContent">
        <!-- Personal Details Tab -->
        <div class="tab-pane fade show active" id="customer" role="tabpanel" aria-labelledby="customer-tab">

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="row">
                        <!-- First Row -->
                        <div class="col-md-2">
                            <label asp-for="FirstName" class="control-label"></label>
                        </div>
                        <div class="col-md-4">
                            <input asp-for="FirstName" class="form-control custom-input" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="LastName" class="control-label"></label>
                        </div>
                        <div class="col-md-4">
                            <input asp-for="LastName" class="form-control custom-input" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Second Row -->
                        <div class="col-md-2">
                            <label asp-for="Address" class="control-label"></label>
                        </div>
                        <div class="col-md-4">
                            <input asp-for="Address" class="form-control custom-input" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="City" class="control-label"></label>
                        </div>
                        <div class="col-md-4">
                            <select asp-for="City" class="form-control">
                                <option value="">-- Select City --</option>
                                @foreach (var city in ViewBag.Cities as List<string>)
                                {
                                    <option value="@city">@city</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Third Row -->
                        <div class="col-md-2">
                            <label asp-for="State" class="control-label"></label>
                        </div>
                        <div class="col-md-4">
                            <input asp-for="State" class="form-control custom-input" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="ZipCode" class="control-label"></label>
                        </div>
                        <div class="col-md-4">
                            <input asp-for="ZipCode" class="form-control custom-input" />
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Fourth Row -->
                        <div class="col-md-2">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                        </div>
                        <div class="col-md-4">
                            <input asp-for="PhoneNumber" class="form-control custom-input" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="Email" class="control-label"></label>
                        </div>
                        <div class="col-md-4">
                            <input asp-for="Email" class="form-control custom-input" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Fifth Row -->
                        <div class="col-md-2">
                            <label asp-for="MeterNumber" class="control-label"></label>
                        </div>
                        <div class="col-md-4">
                            <input asp-for="MeterNumber" class="form-control custom-input" />
                            <span asp-validation-for="MeterNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="LastPaymentDate" class="control-label"></label>
                        </div>
                        <div class="col-md-4">
                            <input asp-for="LastPaymentDate" type="date" class="form-control custom-input" />
                            <span asp-validation-for="LastPaymentDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-1">
                        <!-- Sixth Row -->
                        <div class="col-md-2">
                            <label asp-for="TariffName" class="control-label"></label>
                        </div>
                        <div class="col-md-4">
                            <input asp-for="TariffName" class="form-control custom-input" />
                            <span asp-validation-for="TariffName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <!-- Empty Column for Alignment -->
                        </div>
                    </div>

                    <div class="row mt-4">
                        <!-- Submit Button -->
                        <div class="col-md-12 text-center">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </form>

        </div>





        <!-- Academic Details Tab -->
        <div class="tab-pane fade" id="billing" role="tabpanel" aria-labelledby="billing-tab">
            <table class="form-table">
                <tr>
                    <td><h1>Billing Detail</h1></td>
                </tr>
            </table>
        </div>


        <!-- Academic Details Tab -->
        <div class="tab-pane fade" id="history" role="tabpanel" aria-labelledby="history-tab">
            <table class="form-table">
                <tr>
                    <td><h1>Billing History</h1></td>
                </tr>
            </table>
        </div>



        <!-- Academic Details Tab -->
        <div class="tab-pane fade" id="other" role="tabpanel" aria-labelledby="other-tab">
            <table class="form-table">
                <tr>
                    <td><h1>Other Detail</h1></td>
                </tr>
            </table>
        </div>

  </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>



   
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

