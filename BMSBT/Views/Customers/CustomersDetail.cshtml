@model IEnumerable<BMSBT.Models.CustomersDetail>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCustomers.cshtml";
}
<head>
    <style>
        .table-container {
            height: 400px;
            overflow-y: auto;
        }

    </style>


</head>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="table-dard">

    <table id="studentsTable" class="table table-striped table-borderedtable-hover dt-responsive nowrap" width="100%" cellspacing="0">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Btno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cnicno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FatherName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.MobileNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TelephoneNo)
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-customer-id="@item.Uid">
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Btno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cnicno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FatherName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.MobileNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelephoneNo)
                    </td>


                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Uid">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Uid">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Uid">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>



<script>
    //  console.log(typeof jQuery); // Should print "function" if jQuery is loaded correctly
    // console.log("jQuery Version:", $.fn.jquery); // Should display a version, e.g., 3.7.0
    // console.log("DataTables Loaded:", typeof $.fn.DataTable); // Should display 'function'

    var $dt = jQuery.noConflict();
    $dt(document).ready(function () {
        console.log("Using noConflict mode...");
        var table = $dt('#studentsTable').DataTable({
            paging: true,
            searching: true,
            lengthChange: true,
            pageLength: 10
        });


        // Add row click event
        $('#studentsTable tbody').on('click', 'tr', function () {
            alert('Hello');
            var customerId = $(this).data('customer-id'); // Get the CustomerId from the row
            if (customerId) {
                // Redirect to a billing page or make an AJAX call to generate a bill
                window.location.href = '/Customers/GenerateBill?customerId=' + customerId;
            }
        });
    });
</script>



