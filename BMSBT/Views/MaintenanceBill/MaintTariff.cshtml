@using X.PagedList.Mvc.Core
@using X.PagedList
@model IPagedList<BMSBT.Models.MaintenanceTarrif>

@{
    ViewData["Title"] = "Maintenance Charges";
    Layout = "~/Views/Shared/_LayoutMaintBills.cshtml";
}


<!-- Create New Button -->
<div class="row mb-3">
    <div class="col-md-12">
        <a asp-action="CreateTariff" class="btn btn-primary">Create New</a>
    </div>
</div>

<!-- Search Panel -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" asp-action="MaintTariff">
            <div class="row">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Project</label>
                    <select name="project" class="form-control">
                        <option value="">-- All Projects --</option>
                        @foreach (var p in ViewBag.Projects)
                        {
                            <option value="@p" selected="@(p == ViewBag.SelectedProject ? "selected" : null)">@p</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">Plot Type</label>
                    <select name="plotType" class="form-control">
                        <option value="">-- All Plot Types --</option>
                        @foreach (var pt in ViewBag.PlotTypes)
                        {
                            <option value="@pt" selected="@(pt == ViewBag.SelectedPlotType ? "selected" : null)">@pt</option>
                        }
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary mr-2">Search</button>
                    <a asp-action="MaintTariff" class="btn btn-secondary">Reset</a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Maintenance Tariffs Table -->
<div class="table-responsive">
    <table id="maintenanceTable" class="table table-striped">
        <thead>
            <tr>
                <th>Project</th>
                <th>Plot Type</th>
                <th>Size</th>
                <th>Charges</th>
                <th>Tax</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-id="@item.Uid">
                    <td>@item.Project</td>
                    <td>@item.PlotType</td>
                    <td>@item.Size</td>
                    <td>@item.Charges</td>
                    <td>@item.Tax</td>
                    <td>
                        <!-- Edit Button -->
                        <a asp-action="EditTariff" asp-route-id="@item.Uid" class="btn btn-sm btn-success">Edit</a>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center">No records found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-center">
    @Html.PagedListPager(Model, page => Url.Action("MaintTariff", new { page, project = ViewBag.SelectedProject, plotType = ViewBag.SelectedPlotType }), 
        new X.PagedList.Mvc.Core.PagedListRenderOptions {
            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
            DisplayLinkToLastPage = PagedListDisplayMode.Always,
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            DisplayPageCountAndCurrentLocation = true,
            UlElementClasses = new[] { "pagination" },
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" }
        })
</div>

@section Scripts {
}
