@model BMSBT.Models.MaintenanceTarrif

@{
    ViewData["Title"] = "Edit Maintenance Tariff";
    Layout = "~/Views/Shared/_LayoutMaintBills.cshtml";
}

<div class="card shadow-lg">
    <div class="card-header text-white" style="background-color:#101f63;">
        <h3 class="mb-0">Maintenance Charges</h3>
    </div>
    <div class="card-body">
        <form asp-action="EditTariff" asp-controller="MaintenanceBill" method="post">
            <input type="hidden" asp-for="Uid" /> <!-- Hidden ID Field -->

            <div class="row">
                <div class="col-md-3">
                    <label asp-for="Project">Project</label>
                    <input asp-for="Project" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label asp-for="PlotType">Plot Type</label>
                    <input asp-for="PlotType" class="form-control" required />
                </div>
           

          
                <div class="col-md-3">
                    <label asp-for="Size">Size</label>
                    <input asp-for="Size" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label asp-for="Charges">Charges</label>
                    <input asp-for="Charges" type="number" step="0.01" class="form-control" required />
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-3">
                    <label asp-for="Tax">Tax</label>
                    <input asp-for="Tax" class="form-control" />
                </div>
                <div  style="margin-top:30px">
                    <button type="submit" class="btn btn-primary">Update </button>
                    <a asp-action="MaintTariff" class="btn btn-secondary">Cancel</a>
                </div>
            </div>

           

        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var successMessage = '@TempData["SuccessMessage"]';
        var errorMessage = '@TempData["ErrorMessage"]';
        if (successMessage && successMessage.trim() !== "") {
            Swal.fire({ icon: 'success', title: successMessage, showConfirmButton: true, timer: 3000 });
        } else if (errorMessage && errorMessage.trim() !== "") {
            Swal.fire({ icon: 'error', title: errorMessage, showConfirmButton: true, timer: 3000 });
        }
    });
</script>
