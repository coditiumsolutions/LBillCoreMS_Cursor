@model IEnumerable<BMSBT.Models.CustomersDetail>

@{
    ViewData["Title"] = "Generate";
    Layout = "~/Views/Shared/_LayoutMaintBills.cshtml";
}
<style>
    .row-container {
        display: flex;
        justify-content: space-between; /* Place items at the ends */
        align-items: center; /* Center items vertically */
        margin-bottom: 20px; /* Add spacing below the row */
    }

    .create-link {
        text-decoration: none; /* Remove underline */
        color: #142141; /* Set link color */
        font-weight: bold; /* Make the text bold */
    }

        .create-link:hover {
            color: #0066cc; /* Change color on hover */
        }

    .filter-form {
        margin: 0; /* Remove default margin from form */
    }

    #tariffFilter {
        width: 300px; /* Set width of dropdown */
        padding: 10px; /* Add padding */
        border: 2px solid #142141; /* Border styling */
        border-radius: 5px; /* Rounded corners */
        background-color: #f9f9f9; /* Background color */
        font-size: 16px; /* Font size */
        color: #333; /* Text color */
    }

</style>
<div class="row-container">
    <form id="filterForm" method="get" class="filter-form">
        <select id="tariffFilter" name="tariff" onchange="this.form.submit()">
            <option value="">Select Tariff</option>
            <option value="A-1">A-1</option>
            <option value="A-2-a">A-2-a</option>
            <option value="A-2-c">A-2-c</option>
            <option value="NM">NM</option>
            <option value="G">G</option>
            <!-- Add more categories as needed -->
        </select>
    </form>
    <a asp-action="Create" class="create-link">Create New</a>
</div>


<table id="studentsTable" class="table table-striped table-borderedtable-hover dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Btno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlotType)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.BillStatusMaint)
            </th>
            <th>
               
            </th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" class="record-checkbox" name="selectedIds" value="@item.Uid" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Btno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlotType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillStatusMaint)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Uid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Uid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Uid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<script>

    var $dt = jQuery.noConflict();
    $dt(document).ready(function () {
        console.log("Using noConflict mode...");
        var table = $dt('#studentsTable').DataTable({
            paging: true,
            searching: true,
            lengthChange: true,
            pageLength: 10
        });




    });








</script>