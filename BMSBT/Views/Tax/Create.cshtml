@model BMSBT.Models.TaxInformation
@{
    Layout = "~/Views/Shared/_LayoutTax.cshtml";
}

<div class="card shadow-lg">
    <div style="background-color:#101f63;color:white;height:45px">
        <h3 class="mb-0" style="margin-left:15px ;margin-top:5px">Create Tax</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="TaxName" class="control-label"></label>
                    <input asp-for="TaxName" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label asp-for="TaxRate" class="control-label"></label>
                    <input asp-for="TaxRate" type="text" class="form-control" required type="number" />
                </div>
                <div class="col-md-3">
                    <label asp-for="ApplicableFor" class="control-label"></label>
                    <select asp-for="ApplicableFor" class="form-control" required>
                        <option value="">-- Select Applicable For --</option>
                        <option value="All">All</option>
                        <option value="Residential">Residential</option>
                        <option value="Commercial">Commercial</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label asp-for="Range" class="control-label"></label>
                    <input asp-for="Range" class="form-control" required type="number" />
                </div>
            </div>

            <div class="row" style="margin-top:10px">
                <div class="col-md-3">
                    <label asp-for="IsActive" class="control-label"></label>
                    <select asp-for="IsActive" class="form-control" required>
                        <option value="Active">Active</option>
                        <option value="Not Active">Not Active</option>
                    </select>
                </div>
            </div>

            <div class="form-group mt-3 text-end">
                <button type="submit" class="btn btn-success">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
