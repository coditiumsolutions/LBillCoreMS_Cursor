@model BMSBT.Models.ElectricityBill

<h3>Bill Details</h3>
<table class="table table-bordered">
    <tr><th>Invoice No</th><td>@Model.InvoiceNo</td></tr>
    <tr><th>Customer No</th><td>@Model.CustomerNo</td></tr>
    <tr><th>BT No</th><td>@Model.Btno</td></tr>
    <tr><th>Customer Name</th><td>@Model.CustomerName</td></tr>
    <tr><th>Billing Month</th><td>@Model.BillingMonth</td></tr>
    <tr><th>Billing Year</th><td>@Model.BillingYear</td></tr>
    <tr><th>Bill Amount</th><td>@Model.BillAmount</td></tr>
    <tr><th>Due Date</th><td>@Model.DueDate?.ToString("dd-MMM-yyyy")</td></tr>
    <tr><th>Payment Status</th><td>@Model.PaymentStatus</td></tr>
</table>

<a href="@Url.Action("SGEBills", "SGEBills")" class="btn btn-secondary">Back to List</a>

