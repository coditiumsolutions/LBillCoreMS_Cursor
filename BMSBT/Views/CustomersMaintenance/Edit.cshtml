@model BMSBT.Models.CustomersMaintenance

@{
    ViewData["Title"] = "Edit Maintenance Customer";
    Layout = "~/Views/Shared/_LayoutMaintBills.cshtml";
}

<h3 class="text-center text-primary mb-4">Edit Maintenance Customer</h3>

<div class="container bg-light p-4 rounded shadow-sm">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Uid" />

        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label fw-bold">Customer No</label>
                <input type="text" class="form-control" asp-for="CustomerNo" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">BT No</label>
                <input type="text" class="form-control" asp-for="BTNo" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">Customer Name</label>
                <input type="text" class="form-control" asp-for="CustomerName" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">Father Name</label>
                <input type="text" class="form-control" asp-for="FatherName" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">CNIC No</label>
                <input type="text" class="form-control" asp-for="CNICNo" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">Mobile No</label>
                <input type="text" class="form-control" asp-for="MobileNo" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">Project</label>
                <input type="text" class="form-control" asp-for="Project" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">SubProject</label>
                <input type="text" class="form-control" asp-for="SubProject" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">Block</label>
                <input type="text" class="form-control" asp-for="Block" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">Sector</label>
                <input type="text" class="form-control" asp-for="Sector" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">Plot No</label>
                <input type="text" class="form-control" asp-for="PloNo" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">Plot Type</label>
                <input type="text" class="form-control" asp-for="PlotType" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">Category</label>
                <input type="text" class="form-control" asp-for="Category" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">Size</label>
                <input type="text" class="form-control" asp-for="Size" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">Tariff Name</label>
                <input type="text" class="form-control" asp-for="TariffName" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">Meter No</label>
                <input type="text" class="form-control" asp-for="MeterNo" />
            </div>
        </div>

        <div class="mt-4 text-center">
            <button type="submit" class="btn btn-primary px-4">Save Changes</button>
            <a href="@Url.Action("CustomersMaintenance", "MaintenanceNew")" class="btn btn-secondary px-4">Back to Grid</a>
        </div>
    </form>
</div>
