@model IEnumerable<BMSBT.ViewModels.SectorCustomersViewModel>
@{
    var accordionId = "accordionSectors";
    int count = 0;
    ViewData["Title"] = "Reading";
    Layout = "~/Views/Shared/_LayoutReadingSheet.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="mb-3">

  
    <form asp-action="SearchCustomer" method="get" class="row g-3 mb-3">
        <div class="col-md-4">
            <label for="sectorDropdown" class="form-label">Filter by Sector:</label>
            <select id="sectorDropdown" name="sector" class="form-select" onchange="this.form.submit()">
                <option value="">-- All Sectors --</option>
                @foreach (var sector in ViewBag.Sectors as List<string>)
                {
                    <option value="@sector" selected="@(Context.Request.Query["sector"] == sector ? "selected" : null)">
                        @sector
                    </option>
                }
            </select>
        </div>

        <div class="col-md-4">
            <label for="searchTerm" class="form-label">Search by Customer Info:</label>
            <input type="text" id="searchTerm" name="searchTerm"
                   value="@Context.Request.Query["searchTerm"]"
                   class="form-control" placeholder="Enter Customer No, Name, CNIC, etc." />
        </div>

        <div class="col-md-4 align-self-end">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>




