@model BMSBT.Models.ReadingSheet
@{
    ViewData["Title"] = "Edit Reading";
    Layout = "~/Views/Shared/_LayoutReadingSheet.cshtml";
}

<h2>Edit Reading</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
<style>
    .form-container {
        max-width: 800px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

        .form-group label {
            width: 30%;
            font-weight: bold;
        }

        .form-group .form-control {
            width: 70%;
        }

    .btn-container {
        text-align: center;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
    }

</style>
<div class="form-container">

    <form asp-action="EditReading" method="post">
        <input type="hidden" asp-for="Uid" />

        <div class="row">
           
            <div class="col-md-6 form-group">
                <label>BT No:</label>
                <input asp-for="Btno" class="form-control" required />
            </div>

            <div class="col-md-6 form-group">
                <label>Customer No:</label>
                <input asp-for="CustomerNo" class="form-control" required />
            </div>


            <div class="col-md-6 form-group">
                <label>Billing Month:</label>
                <select asp-for="Month" class="form-control">
                    <option value="">-- Select Month --</option>
                    @foreach (var month in ViewBag.BillingMonths)
                    {
                        <option value="@month">@month</option>
                    }
                </select>
            </div>

            <div class="col-md-6 form-group">
                <label>Billing Year:</label>
                <select asp-for="Year" class="form-control">
                    <option value="">-- Select Year --</option>
                    @foreach (var year in ViewBag.BillingYears)
                    {
                        <option value="@year">@year</option>
                    }
                </select>
            </div>

            

            <div class="col-md-6 form-group">
                <label>Pre 1</label>
                <input asp-for="Present1" type="number" class="form-control" required />
            </div>

            <div class="col-md-6 form-group">
                <label>Curr 1</label>
                <input asp-for="Previous1" type="number" class="form-control" required />
            </div>

            <div class="col-md-6 form-group">
                <label>Pre 2</label>
                <input asp-for="Present2" type="number" class="form-control" required />
            </div>

            <div class="col-md-6 form-group">
                <label>Curr 2</label>
                <input asp-for="Previous2" type="number" class="form-control" required />
            </div>

            <div class="col-md-6 form-group">
                <label>Pre 3</label>
                <input asp-for="Present3" type="number" class="form-control" required />
            </div>

            <div class="col-md-6 form-group">
                <label>Curr 3</label>
                <input asp-for="Previous3" type="number" class="form-control" required />
            </div>

        </div>

        <div class="btn-container">
            <button type="submit" class="btn btn-success">Save Changes</button>
            <a asp-action="ShowReading" class="btn btn-secondary">Back to Readings</a>
        </div>
    </form>
</div>
