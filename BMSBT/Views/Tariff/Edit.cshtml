@model BMSBT.Models.Tarrif
@{
    Layout = "~/Views/Shared/_LayoutTariff.cshtml";
}

<div class="card shadow-lg">
    <div style="background-color:#101f63;color:white;height:45px">
        <h3 class="mb-0" style="margin-left:15px ;margin-top:5px">Edit Tarrif</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Uid" />

            <div class="row">
                <div class="col-md-3">
                    <label asp-for="TarrifName" class="control-label"></label>
                    <input asp-for="TarrifName" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label asp-for="TarrifType" class="control-label"></label>
                    <input asp-for="TarrifType" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label asp-for="MeterType" class="control-label"></label>
                    <input asp-for="MeterType" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label asp-for="Slab" class="control-label"></label>
                    <input asp-for="Slab" class="form-control" required />
                </div>
            </div>

            <div class="row" style="margin-top:10px">
                <div class="col-md-3">
                    <label asp-for="Range" class="control-label"></label>
                    <input asp-for="Range" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label asp-for="Rate1" class="control-label"></label>
                    <input asp-for="Rate1" type="number" step="0.01" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label asp-for="Rate2" class="control-label"></label>
                    <input asp-for="Rate2" type="number" step="0.01" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label asp-for="MinCharges" class="control-label"></label>
                    <input asp-for="MinCharges" type="number" step="0.01" class="form-control" required />
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" class="form-control" required>
                        <option value="Active">Active</option>
                        <option value="Not Active">Not Active</option>
                    </select>
                </div>
                <div class="col-md-9">
                    <label asp-for="Details" class="control-label"></label>
                    <input asp-for="Details" class="form-control" rows="3"></input>
                </div>
            </div>

            <div class="form-group mt-3 text-end">
                <button type="submit" class="btn btn-success">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
