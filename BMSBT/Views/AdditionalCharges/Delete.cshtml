@model BMSBT.Models.AdditionalCharge
@{
    Layout = "~/Views/Shared/_LayoutMaintBills.cshtml";
    ViewData["Title"] = "Delete Additional Charge";
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0 text-danger">Delete Additional Charge</h5>
    </div>
    <div class="card-body">
        <h6>Are you sure you want to delete this record?</h6>
        <dl class="row">
            <dt class="col-sm-3">BT No</dt>
            <dd class="col-sm-9">@Model.BTNo</dd>

            <dt class="col-sm-3">Service Type</dt>
            <dd class="col-sm-9">@Model.ServiceType</dd>

            <dt class="col-sm-3">Charges Name</dt>
            <dd class="col-sm-9">@Model.ChargesName</dd>

            <dt class="col-sm-3">Charges Amount</dt>
            <dd class="col-sm-9">@Model.ChargesAmount</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Uid" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

