@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<BMSBT.Models.User>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_LayoutSetup.cshtml";
}

<style>
    .table th {
        cursor: pointer;
    }

    .sort-icon::after {
        content: '↕';
        margin-left: 5px;
        opacity: 0.5;
    }

    .sort-asc::after {
        content: '↑';
        opacity: 1;
    }

    .sort-desc::after {
        content: '↓';
        opacity: 1;
    }

    .search-panel {
        margin-bottom: 20px;
    }

    .table tbody tr:hover {
        background-color: #f5f5f5;
    }

    .pagination {
        margin: 20px 0;
        justify-content: center;
    }
</style>

<!-- Search Panel -->
<div class="search-panel">
    <a asp-action="CreateUser" class="btn btn-success">+ Add User</a>
</div>

<!-- Users Table -->
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["UsernameSort"]" class="sort-icon">
                        Username
                    </a>
                </th>


                
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["RoleSort"]" class="sort-icon">
                        Role
                    </a>
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr ondblclick="redirectToEdit('@user.Uid')">
                    <td>@user.Username</td>
                   
                    <td>@user.Role</td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function redirectToEdit(userId) {
        window.location.href = '/Home/EditUser/' + encodeURIComponent(userId);
    }
</script>

<!-- Pagination -->
<div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, search = Context.Request.Query["search"], sortOrder = Context.Request.Query["sortOrder"] }))
</div>
