@model List<BMSBT.Models.Fine>

@{
    ViewData["Title"] = "Fine Records";
    Layout = "~/Views/Shared/_LayoutFine.cshtml";
}

<h2>Fine Records</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="successAlert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage && successMessage.trim() !== '') {
                alert(successMessage);
            }
        });
    </script>
}

<form method="get" class="mb-3">
    <div class="form-row align-items-end">

        <div class="col-md-2">
            <label for="FineMonth">Month</label>
            <select name="FineMonth" class="form-control">
                <option value="">-- Month --</option>
                @{
                    var months = System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.MonthNames;
                    for (int i = 0; i < 12; i++)
                    {
                        var month = months[i];
                        if (!string.IsNullOrEmpty(month))
                        {
                            <option value="@month" selected="@(Context.Request.Query["FineMonth"] == month ? "selected" : null)">
                                @month
                            </option>
                        }
                    }
                }
            </select>
        </div>

        <div class="col-md-2">
            <label for="FineYear">Year</label>
            <select name="FineYear" class="form-control">
                <option value="">-- Year --</option>
                @{ var qYear = Context.Request.Query["FineYear"].ToString(); }
                <option value="2027" selected="@(qYear == "2027" ? "selected" : null)">2027</option>
                <option value="2026" selected="@(qYear == "2026" ? "selected" : null)">2026</option>
                <option value="2025" selected="@(qYear == "2025" ? "selected" : null)">2025</option>
            </select>
        </div>

        <div class="col-md-2">
            <label for="BTNo">BT No</label>
            <input type="text" name="BTNo" class="form-control" value="@Context.Request.Query["BTNo"]" placeholder="BT No" />
        </div>

        <div class="col-md-3">
            <label for="FineService">Fine Service</label>
            <select name="FineService" class="form-control">
                <option value="">-- Fine Service --</option>
                <option value="Electricity" selected="@(Context.Request.Query["FineService"] == "Electricity" ? "selected" : null)">Electricity</option>
                <option value="Maintenance" selected="@(Context.Request.Query["FineService"] == "Maintenance" ? "selected" : null)">Maintenance</option>
            </select>
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-primary mt-4">Search</button>
        </div>

    </div>
</form>




@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>BT No</th>
                <th>Customer Name</th>
                <th>Project</th>
                <th>Month/Year</th>
                <th>Service</th>
                <th>Amount</th>
                <th>Fine By</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fine in Model)
            {
                <tr ondblclick="openDetails(@fine.FineID)" data-id="@fine.FineID">
                    <td>@fine.BTNo</td>
                    <td>@fine.CustomerName</td>
                    <td>@fine.ProjectName</td>
                    <td>@fine.FineMonth / @fine.FineYear</td>
                    <td>@fine.FineService</td>
                    <td>@fine.FineToCharge</td>
                    <td>@fine.FineEnteredBy</td>
                    <td>@fine.FineEnterDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@fine.FineID" class="btn btn-info btn-sm">View</a>
                        <a asp-action="Edit" asp-route-id="@fine.FineID" class="btn btn-warning btn-sm">Edit</a>
                        @* <a asp-action="Delete" asp-route-id="@fine.FineID" class="btn btn-danger btn-sm">Delete</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Context.Request.Query.Any(q => !string.IsNullOrEmpty(q.Value.ToString())))
{
    <div class="alert alert-info mt-3">
        <strong>No records found</strong> for the selected criteria.
    </div>
}
else
{
    <div class="alert alert-info mt-3">
        <strong>Please select search criteria</strong> to view Fine records.
    </div>
}

@section Scripts {
    <script>
        function openDetails(fineId) {
            if (!fineId) return;
            window.location.href = '/Fine/Details/' + fineId;
        }
    </script>
}

