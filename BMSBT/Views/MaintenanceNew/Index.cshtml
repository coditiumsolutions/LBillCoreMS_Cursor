@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMaintBills.cshtml";
}

<style>
    .report-table {
        width: 100%;
        border-collapse: collapse;
        background-color: white;
        margin-top: 20px;
    }

        .report-table th,
        .report-table td {
            border: 1px solid #ccc;
            padding: 12px 15px;
            text-align: left;
        }

    .section-header {
        background-color: #e8e8e8;
        font-weight: bold;
        color: #333;
    }

    .metric-row {
        background-color: #f9f9f9;
    }

    .metric-name {
        font-weight: 500;
        color: #555;
        width: 25%;
    }

    .metric-value {
        font-weight: bold;
        color: #1976d2;
        text-align: right;
        width: 25%;
    }

    .header-section {
        background-color: #4a90c2;
        color: white;
        padding: 10px 15px;
        margin-bottom: 0;
        border-radius: 5px 5px 0 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .metric-note {
        color: #666;
        font-style: italic;
        width: 25%;
    }

    .metric-secondary {
        font-weight: bold;
        color: #1976d2;
        text-align: right;
        width: 25%;
    }

    .important-note {
        color: #e53935 !important;
        font-weight: 500;
    }

    .amount {
        color: #2e7d32;
        font-weight: bold;
    }

</style>


<div class="row-container">
    <div class="row mb-4">
        @if (ViewBag.ProjectCustomerCounts != null)
        {
            @foreach (var item in ViewBag.ProjectCustomerCounts)
            {
                <div class="col-md-3">
                    <div class="card text-white bg-info mb-3">
                        <div class="card-header">@item.Project</div>
                        <div class="card-body">
                            <h5 class="card-title">@item.Count</h5>
                            <p class="card-text">Total Customers</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>


<div style="margin-top:20px;">
    @if (!string.IsNullOrEmpty(ViewBag.SelectedYear as string) && !string.IsNullOrEmpty(ViewBag.SelectedMonth as string))
    {
        <div class="header-section">
            <div>
                <h4 style="margin: 0;">Maintenance Billing Summary - @ViewBag.SelectedMonth @ViewBag.SelectedYear</h4>
            </div>
        </div>
        <table class="report-table" style="margin-top: 0;">
            <!-- Generated Detail Section -->
            <tr class="section-header">
                <td colspan="4"><strong>Generated Detail</strong></td>
            </tr>
            <tr class="metric-row">
                <td class="metric-name">Bills Generated</td>
                <td class="metric-value">@((ViewBag.TotalBills as int?)?.ToString("N0") ?? "0")</td>
                <td class="metric-note"></td>
                <td class="metric-secondary"></td>
            </tr>
            <tr class="metric-row">
                <td class="metric-name">Total Current Billing (Rs)</td>
                <td class="metric-value amount">@((ViewBag.TotalAmountGenerated as decimal?)?.ToString("N0") ?? "0")</td>
                <td class="metric-note"></td>
                <td class="metric-secondary"></td>
            </tr>

            <!-- Payments Detail Section -->
            <tr class="section-header">
                <td colspan="4"><strong>Payments Detail</strong></td>
            </tr>
            <tr class="metric-row">
                <td class="metric-name">Paid (Amount)</td>
                <td class="metric-value amount">@((ViewBag.PaidAmount as decimal?)?.ToString("N0") ?? "0")</td>
                <td class="metric-note">Paid (No Of Bills)</td>
                <td class="metric-secondary">@((ViewBag.PaidCount as int?)?.ToString("N0") ?? "0")</td>
            </tr>
            <tr class="metric-row">
                <td class="metric-name">Paid with Surcharge (Amount)</td>
                <td class="metric-value amount">@((ViewBag.SurchargeAmount as decimal?)?.ToString("N0") ?? "0")</td>
                <td class="metric-note">Surcharge (No Of Bills)</td>
                <td class="metric-secondary">@((ViewBag.SurchargeCount as int?)?.ToString("N0") ?? "0")</td>
            </tr>
            <tr class="metric-row">
                <td class="metric-name">Partially Paid (Amount)</td>
                <td class="metric-value amount">@((ViewBag.PartialAmount as decimal?)?.ToString("N0") ?? "0")</td>
                <td class="metric-note">Partial (No Of Bills)</td>
                <td class="metric-secondary">@((ViewBag.PartialCount as int?)?.ToString("N0") ?? "0")</td>
            </tr>
            <tr class="metric-row">
                <td class="metric-name important-note">Unpaid Amount (Rs)</td>
                <td class="metric-value amount important-note">@((ViewBag.BillUnpaidAmount as decimal?)?.ToString("N0") ?? "0")</td>
                <td class="metric-note important-note">Unpaid Bills (Number)</td>
                <td class="metric-secondary important-note">@((ViewBag.UnpaidBillsCount as int?)?.ToString("N0") ?? "0")</td>
            </tr>
        </table>
    }
</div>
