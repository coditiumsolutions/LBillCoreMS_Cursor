@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<BMSBT.Models.OperatorsSetup>

@{
    ViewData["Title"] = "All Operators";
    Layout = "~/Views/Shared/_LayoutSetup.cshtml";
}  

<style>
    .table th {
        cursor: pointer;
    }

    .sort-icon::after {
        content: '↕';
        margin-left: 5px;
        opacity: 0.5;
    }

    .sort-asc::after {
        content: '↑';
        opacity: 1;
    }

    .sort-desc::after {
        content: '↓';
        opacity: 1;
    }

    .search-panel {
        margin-bottom: 20px;
    }

    .table tbody tr:hover {
        background-color: #f5f5f5;
    }

    .pagination {
        margin: 20px 0;
        justify-content: center;
    }
</style>

<!-- Search Panel -->
<div class="search-panel">
   @*  <form method="get">
        <input type="text" name="search" value="@Context.Request.Query["search"]" placeholder="Search..." class="form-control" style="width:300px; display:inline-block; margin-right:10px;" />
        <button type="submit" class="btn btn-secondary">Search</button>
    </form> *@
    <a asp-action="Create" class="btn btn-success">+ Add Operator</a>
</div>

<!-- Operators Table -->
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-action="AllOperators" asp-route-sortOrder="@ViewData["OperatorIdSort"]" class="sort-icon">
                        Operator ID
                    </a>
                </th>
                <th>
                    <a asp-action="AllOperators" asp-route-sortOrder="@ViewData["OperatorNameSort"]" class="sort-icon">
                        Operator Name
                    </a>
                </th>
                <th>Bank Name</th>
                <th>Billing Month</th>
                <th>Billing Year</th>
                <th>Reading Date</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var operatorDetail in Model)
            {
                <tr ondblclick="redirectToEdit('@operatorDetail.OperatorID')">

                    <td>@operatorDetail.OperatorID</td>
                    <td>@operatorDetail.OperatorName</td>
                    <td>@operatorDetail.BankName</td>
                    <td>@operatorDetail.BillingMonth</td>
                    <td>@operatorDetail.BillingYear</td>
                    <td>@operatorDetail.ReadingDate</td>
                </tr>
            }
        </tbody>

    </table>
</div>
<!-- Edit Operator Modal -->
<div class="modal fade" id="editOperatorModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Operator</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editOperatorForm">
                    <input type="hidden" id="editUid" name="Uid" />

                    <div class="mb-3">
                        <label class="form-label">Operator ID</label>
                        <input type="text" id="editOperatorId" name="OperatorId" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Operator Name</label>
                        <input type="text" id="editOperatorName" name="OperatorName" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Bank Name</label>
                        <input type="text" id="editBankName" name="BankName" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Billing Month</label>
                        <input type="text" id="editBillingMonth" name="BillingMonth" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Billing Year</label>
                        <input type="text" id="editBillingYear" name="BillingYear" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>



<script>
       function redirectToEdit(OperatorId) {
        window.location.href = '/OperatorsSetup/Edit/' + encodeURIComponent(OperatorId);
    }



</script>

<!-- Pagination -->
<div>
    @Html.PagedListPager(Model, page => Url.Action("AllOperators", new { page, search = Context.Request.Query["search"], sortOrder = Context.Request.Query["sortOrder"] }))
</div>
