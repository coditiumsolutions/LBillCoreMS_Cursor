@model BMSBT.Models.Adjustment
@{
    Layout = "~/Views/Shared/_LayoutMaintBills.cshtml";
    ViewData["Title"] = "Delete Adjustment";
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0 text-danger">Delete Adjustment</h5>
    </div>
    <div class="card-body">
        <h6>Are you sure you want to delete this record?</h6>
        <dl class="row">
            <dt class="col-sm-3">BT No</dt>
            <dd class="col-sm-9">@Model.BTNo</dd>

            <dt class="col-sm-3">Billing Type</dt>
            <dd class="col-sm-9">@Model.BillingType</dd>

            <dt class="col-sm-3">Adjustment Name</dt>
            <dd class="col-sm-9">@Model.AdjustmentName</dd>

            <dt class="col-sm-3">Adjustment Type</dt>
            <dd class="col-sm-9">@Model.AdjustmentType</dd>

            <dt class="col-sm-3">Adjustment Value</dt>
            <dd class="col-sm-9">@Model.AdjustmentValue</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="AdjustmentId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
