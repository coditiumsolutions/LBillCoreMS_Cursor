@if (Model.TotalCustomers > 0)
{
    <div class="billing-summary">
        <h3>Billing Report</h3>

        <div class="summary-item total-customers">
            Total Customers: @Model.TotalCustomers
        </div>

        <div class="summary-item total-bills">
            Total Bills Created for @Model.SelectedMonth @Model.SelectedYear: @Model.TotalBillsCreated
        </div>

        <div class="summary-item pending-bills">
            Pending Bills for @Model.SelectedMonth @Model.SelectedYear: @Model.PendingBills
        </div>
    </div>
}
