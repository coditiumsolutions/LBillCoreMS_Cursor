@model BMSBT.ViewModels.BillSearchViewModel
@{
    ViewData["Title"] = "Search Print Bills";
    Layout = "~/Views/Shared/_LayoutEBills.cshtml";
}

<style>
    .search-row {
        margin-bottom: 1rem;
    }

    .search-row .form-label {
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 4px;
    }

    .search-row .form-control,
    .search-row .form-select {
        padding: 4px 10px;
        font-size: 0.88rem;
        height: 34px;
        width: 100%;
    }

    .search-row .btn-search {
        margin-top: 28px;
        padding: 6px 16px;
        font-size: 0.88rem;
        width: 100%;
    }

   
</style>



<h4>Search Electricity Bills</h4>

<form asp-action="SearchPrintBills" method="get" class="mb-4">
    <div class="row g-2 search-row align-items-end">
        <div class="col-md-2">
            <label class="form-label">Billing Month</label>
            <select class="form-select" name="selectedMonth">
                <option value="">-- Select Month --</option>
                @foreach (var month in Model.Months)
                {
                    <option value="@month" selected="@(Model.SelectedMonth == month ? "selected" : null)">@month</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <label class="form-label">Billing Year</label>
            <select class="form-select" name="selectedYear">
                <option value="">-- Select Year --</option>
                @foreach (var year in Model.Years)
                {
                    <option value="@year" selected="@(Model.SelectedYear == year ? "selected" : null)">@year</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <label class="form-label">Sector</label>
            <select class="form-select" name="selectedSector">
                <option value="">-- Select Sector --</option>
                @foreach (var sector in Model.Sectors)
                {
                    <option value="@sector" selected="@(Model.SelectedSector == sector ? "selected" : null)">@sector</option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">Search by BT No (optional)</label>
            <input type="text" name="btnoSearch" class="form-control" value="@Model.BtnoSearch" placeholder="Enter BT No" />
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-primary btn-search">Search</button>
        </div>
    </div>
</form>



@if (Model.Results != null && Model.Results.Any())
{
    <table class="table table-bordered table-striped mt-4">
        <thead class="table-light">
            <tr>
                <th>Invoice No</th>
                <th>BT No</th>
                <th>Customer Name</th>
                <th>Billing Month</th>
                <th>Billing Year</th>
                <th>Bill Amount</th>
                <th>Sector</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var bill in Model.Results)
            {
                <tr ondblclick="window.location.href='@Url.Action("PrintView", "EBillU", new { id = bill.Uid })'" style="cursor: pointer;">
                    <td>@bill.InvoiceNo</td>
                    <td>@bill.Btno</td>
                    <td>@bill.CustomerName</td>
                    <td>@bill.BillingMonth</td>
                    <td>@bill.BillingYear</td>
                    <td>@bill.BillAmount</td>
                    <td>@bill.Sector</td>
                </tr>
            }
        </tbody>

    </table>
}
else if (Model.SelectedMonth != null || Model.BtnoSearch != null)
{
    <p class="text-danger">No records found for the given criteria.</p>
}

<script>
    function openBill(id) {
        if (id) {
            window.location.href = '/EBillU/PrintBill/' + id;
        }
    }
</script>